{
    "uid": "signalops-golden",
    "title": "SignalOps - Golden Signals",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
        {
            "type": "timeseries",
            "title": "Request Rate",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "Prometheus"
                    },
                    "expr": "sum(rate(http_server_duration_count[5m]))",
                    "legendFormat": "req/s"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Error Rate (5xx)",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "Prometheus"
                    },
                    "expr": "sum(rate(http_server_duration_count{http_status_code=~\"5..\"}[5m])) / sum(rate(http_server_duration_count[5m]))",
                    "legendFormat": "error rate"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "P95 Latency",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 24,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "Prometheus"
                    },
                    "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_duration_bucket[5m])))",
                    "legendFormat": "p95"
                }
            ]
        }
    ],
    "time": {
        "from": "now-1h",
        "to": "now"
    }
}