{
    "uid": "signalops-observability",
    "title": "SignalOps - Complete Observability",
    "schemaVersion": 38,
    "version": 1,
    "panels": [
        {
            "type": "timeseries",
            "title": "Request Rate",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 8,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "Prometheus"
                    },
                    "expr": "sum(rate(http_server_duration_count[5m]))",
                    "legendFormat": "req/s"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Error Rate (5xx)",
            "gridPos": {
                "x": 8,
                "y": 0,
                "w": 8,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "Prometheus"
                    },
                    "expr": "sum(rate(http_server_duration_count{http_status_code=~\"5..\"}[5m])) / sum(rate(http_server_duration_count[5m]))",
                    "legendFormat": "error rate"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "P95 Latency",
            "gridPos": {
                "x": 16,
                "y": 0,
                "w": 8,
                "h": 8
            },
            "targets": [
                {
                    "datasource": {
                        "type": "prometheus",
                        "uid": "Prometheus"
                    },
                    "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_duration_bucket[5m])))",
                    "legendFormat": "p95"
                }
            ]
        },
        {
            "type": "logs",
            "title": "Application Logs",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 12,
                "h": 10
            },
            "datasource": {
                "type": "loki",
                "uid": "Loki"
            },
            "targets": [
                {
                    "datasource": {
                        "type": "loki",
                        "uid": "Loki"
                    },
                    "expr": "{service_name=\"signal-ops-backend\"}"
                }
            ],
            "options": {
                "dedupStrategy": "none",
                "enableLogDetails": true,
                "prettifyLogMessage": false,
                "showCommonLabels": false,
                "showLabels": false,
                "showTime": true,
                "sortOrder": "Descending",
                "wrapLogMessage": false
            }
        },
        {
            "type": "logs",
            "title": "Error Logs",
            "gridPos": {
                "x": 12,
                "y": 8,
                "w": 12,
                "h": 10
            },
            "datasource": {
                "type": "loki",
                "uid": "Loki"
            },
            "targets": [
                {
                    "datasource": {
                        "type": "loki",
                        "uid": "Loki"
                    },
                    "expr": "{service_name=\"signal-ops-backend\"} |= \"ERROR\""
                }
            ],
            "options": {
                "dedupStrategy": "none",
                "enableLogDetails": true,
                "prettifyLogMessage": false,
                "showCommonLabels": false,
                "showLabels": false,
                "showTime": true,
                "sortOrder": "Descending",
                "wrapLogMessage": false
            }
        },
        {
            "type": "table",
            "title": "Distributed Traces",
            "gridPos": {
                "x": 0,
                "y": 18,
                "w": 24,
                "h": 12
            },
            "datasource": {
                "type": "tempo",
                "uid": "Tempo"
            },
            "targets": [
                {
                    "datasource": {
                        "type": "tempo",
                        "uid": "Tempo"
                    },
                    "queryType": "traceqlSearch",
                    "query": "{resource.service.name=\"signal-ops-backend\"}",
                    "tableFormat": "traces",
                    "limit": 20
                }
            ],
            "options": {
                "showHeader": true,
                "cellHeight": "sm",
                "footer": {
                    "show": false,
                    "reducer": [
                        "sum"
                    ],
                    "fields": "",
                    "countRows": false
                }
            }
        }
    ],
    "time": {
        "from": "now-15m",
        "to": "now"
    }
}